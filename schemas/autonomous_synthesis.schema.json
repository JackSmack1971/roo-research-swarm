{
  "$id": "autonomous_synthesis.schema.json",
  "type": "object",
  "required": [
    "project_id",
    "synthesis_version",
    "autonomous_development_readiness",
    "research_consolidation",
    "memory_bank_generation",
    "documentation_generation",
    "configuration_generation",
    "quality_assurance"
  ],
  "properties": {
    "project_id": {
      "type": "string"
    },
    "synthesis_version": {
      "type": "string"
    },
    "synthesis_timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "autonomous_development_readiness": {
      "type": "object",
      "required": [
        "overall_readiness_score",
        "confidence_assessment",
        "coverage_assessment",
        "question_elimination_score"
      ],
      "properties": {
        "overall_readiness_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "confidence_assessment": {
          "type": "object",
          "properties": {
            "critical_decisions_confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "implementation_guidance_confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "architecture_decisions_confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "coverage_assessment": {
          "type": "object",
          "properties": {
            "memory_bank_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "documentation_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "implementation_scenario_coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "question_elimination_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "sparc_methodology_compliance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "research_consolidation": {
      "type": "object",
      "required": [
        "domain_research_summary",
        "technology_research_summary",
        "security_research_summary",
        "requirements_research_summary",
        "operations_research_summary"
      ],
      "properties": {
        "domain_research_summary": {
          "type": "object",
          "properties": {
            "confidence_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "key_insights": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "implementation_impact": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "technology_research_summary": {
          "type": "object",
          "properties": {
            "confidence_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "key_decisions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "implementation_guidance": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "security_research_summary": {
          "type": "object",
          "properties": {
            "confidence_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "threat_mitigation_strategies": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "compliance_requirements": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "requirements_research_summary": {
          "type": "object",
          "properties": {
            "confidence_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "functional_patterns": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "user_experience_guidance": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "operations_research_summary": {
          "type": "object",
          "properties": {
            "confidence_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "deployment_strategies": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "operational_procedures": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "research_conflicts_resolved": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "conflict_description": {
                "type": "string"
              },
              "resolution_approach": {
                "type": "string"
              },
              "final_decision": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "memory_bank_generation": {
      "type": "object",
      "required": [
        "files_generated",
        "content_quality_assessment",
        "sparc_compliance_validation"
      ],
      "properties": {
        "files_generated": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "filename",
              "content_summary",
              "autonomous_development_value"
            ],
            "properties": {
              "filename": {
                "type": "string"
              },
              "content_summary": {
                "type": "string"
              },
              "autonomous_development_value": {
                "type": "string"
              },
              "research_sources": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "confidence_level": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              }
            }
          }
        },
        "content_quality_assessment": {
          "type": "object",
          "properties": {
            "completeness_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "actionability_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "clarity_score": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "sparc_compliance_validation": {
          "type": "object",
          "properties": {
            "modularity_compliance": {
              "type": "boolean"
            },
            "security_by_design_compliance": {
              "type": "boolean"
            },
            "test_driven_development_support": {
              "type": "boolean"
            },
            "documentation_standards_compliance": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "documentation_generation": {
      "type": "object",
      "required": [
        "documentation_framework",
        "template_population_status",
        "implementation_guidance_completeness"
      ],
      "properties": {
        "documentation_framework": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "document_path": {
                "type": "string"
              },
              "document_type": {
                "type": "string"
              },
              "content_source_research": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "autonomous_development_support": {
                "type": "string"
              }
            }
          }
        },
        "template_population_status": {
          "type": "object",
          "properties": {
            "specification_template": {
              "type": "string",
              "enum": ["complete", "partial", "not_started"]
            },
            "architecture_template": {
              "type": "string",
              "enum": ["complete", "partial", "not_started"]
            },
            "security_documentation": {
              "type": "string",
              "enum": ["complete", "partial", "not_started"]
            },
            "operations_documentation": {
              "type": "string",
              "enum": ["complete", "partial", "not_started"]
            }
          }
        },
        "implementation_guidance_completeness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "configuration_generation": {
      "type": "object",
      "required": [
        "project_configuration_files",
        "automation_setup",
        "security_configuration"
      ],
      "properties": {
        "project_configuration_files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "config_file": {
                "type": "string"
              },
              "purpose": {
                "type": "string"
              },
              "research_basis": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "automation_setup": {
          "type": "object",
          "properties": {
            "ci_cd_configuration": {
              "type": "boolean"
            },
            "infrastructure_as_code": {
              "type": "boolean"
            },
            "monitoring_configuration": {
              "type": "boolean"
            },
            "security_scanning_setup": {
              "type": "boolean"
            }
          }
        },
        "security_configuration": {
          "type": "object",
          "properties": {
            "access_controls_configured": {
              "type": "boolean"
            },
            "security_policies_implemented": {
              "type": "boolean"
            },
            "compliance_monitoring_setup": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "quality_assurance": {
      "type": "object",
      "required": [
        "validation_results",
        "gap_analysis",
        "autonomous_development_blockers"
      ],
      "properties": {
        "validation_results": {
          "type": "object",
          "properties": {
            "research_completeness": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "implementation_feasibility": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "sparc_methodology_alignment": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "autonomous_development_support": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        },
        "gap_analysis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "gap_description": {
                "type": "string"
              },
              "impact_on_autonomy": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"]
              },
              "mitigation_strategy": {
                "type": "string"
              },
              "additional_research_needed": {
                "type": "boolean"
              }
            }
          }
        },
        "autonomous_development_blockers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "blocker_description": {
                "type": "string"
              },
              "questions_remaining": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "resolution_approach": {
                "type": "string"
              },
              "estimated_resolution_effort": {
                "type": "string"
              }
            }
          }
        },
        "autonomous_development_certification": {
          "type": "object",
          "properties": {
            "ready_for_autonomous_development": {
              "type": "boolean"
            },
            "confidence_in_foundation": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "expected_autonomy_percentage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "certification_timestamp": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    }
  }
}

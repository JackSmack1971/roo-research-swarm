{
  "$id": "sparc_section_state.schema.json",
  "type": "object",
  "required": [
    "project_id",
    "section_id",
    "version",
    "status",
    "sparc_context",
    "actors",
    "artifacts",
    "metrics",
    "flags",
    "next_mode"
  ],
  "properties": {
    "project_id": {
      "type": "string"
    },
    "section_id": {
      "type": "string",
      "pattern": "^S-\\d{3}-(domain|technology|security|requirements|operations)$"
    },
    "version": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "CREATED",
        "RESEARCHING", 
        "VERIFIED",
        "ADVERSARIAL",
        "SYNTHESIS_READY",
        "SYNTHESIZED",
        "AUTONOMOUS_READY",
        "BLOCKED"
      ]
    },
    "sparc_context": {
      "type": "object",
      "required": [
        "research_domain",
        "autonomous_development_target",
        "confidence_threshold"
      ],
      "properties": {
        "research_domain": {
          "type": "string",
          "enum": [
            "domain",
            "technology", 
            "security",
            "requirements",
            "operations"
          ]
        },
        "autonomous_development_target": {
          "type": "boolean"
        },
        "confidence_threshold": {
          "type": "number",
          "minimum": 0.95,
          "maximum": 1.0
        },
        "target_memory_bank_files": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "productContext.md",
              "systemPatterns.md", 
              "decisionLog.md",
              "businessIntelligence.md",
              "technicalArchitecture.md",
              "securityFramework.md",
              "operationalProcedures.md",
              "qualityAssurance.md"
            ]
          }
        },
        "target_documentation": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sparc_phase_relevance": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "specification",
              "pseudocode", 
              "architecture",
              "refinement",
              "completion"
            ]
          }
        }
      }
    },
    "actors": {
      "type": "object",
      "properties": {
        "orchestrator": {
          "type": "string",
          "enum": [
            "sparc-autonomous-orchestrator",
            "research-orchestrator"
          ]
        },
        "researcher": {
          "type": "string",
          "enum": [
            "sparc-domain-intelligence",
            "sparc-technology-architect",
            "sparc-security-architect", 
            "sparc-requirements-architect",
            "sparc-operations-architect",
            "data-researcher"
          ]
        },
        "fact_checker": {
          "type": "string",
          "enum": [
            "sparc-autonomous-validator",
            "rapid-fact-checker"
          ]
        },
        "red_team": {
          "type": "string",
          "enum": [
            "sparc-autonomous-adversary",
            "adversarial-testing-agent"
          ]
        },
        "synthesizer": {
          "type": "string",
          "enum": [
            "sparc-autonomous-synthesizer"
          ]
        },
        "planner": {
          "type": "string",
          "enum": [
            "probabilistic-planner"
          ]
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "claims_json": {
          "type": "string"
        },
        "verification_json": {
          "type": "string" 
        },
        "adversarial_json": {
          "type": "string"
        },
        "synthesis_output": {
          "type": "string"
        },
        "intelligence_artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "metrics": {
      "type": "object",
      "required": [
        "verification_confidence",
        "sparc_relevance_score",
        "autonomous_development_readiness"
      ],
      "properties": {
        "verification_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "sparc_relevance_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "autonomous_development_readiness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "coverage": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "contradiction_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "implementation_guidance_completeness": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": true
    },
    "flags": {
      "type": "object",
      "required": [
        "autonomous_development_ready",
        "synthesis_approved"
      ],
      "properties": {
        "fos": {
          "type": "boolean"
        },
        "rework": {
          "type": "boolean"
        },
        "autonomous_development_ready": {
          "type": "boolean"
        },
        "synthesis_approved": {
          "type": "boolean"
        },
        "high_confidence_research": {
          "type": "boolean"
        },
        "comprehensive_coverage": {
          "type": "boolean"
        }
      }
    },
    "next_mode": {
      "type": "string"
    }
  },
  "additionalProperties": true
}

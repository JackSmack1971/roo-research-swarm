{
  "$id": "adversarial.schema.json",
  "type": "object",
  "required": [
    "vulnerabilities"
  ],
  "properties": {
    "vulnerabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "severity",
          "attack"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "attack": {
            "type": "string"
          },
          "fix": {
            "type": "string"
          }
        }
      }
    }
  }
}